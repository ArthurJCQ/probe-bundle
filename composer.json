{
    "name": "arty/probe-bundle",
    "description": "A Symfony bundle to create Probes",
    "type": "symfony-bundle",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.3",
        "symfony/console": "^7.0|^8.0",
        "symfony/dependency-injection": "^7.0|^8.0",
        "symfony/http-kernel": "^7.0|^8.0",
        "doctrine/persistence": "^3.4|^4.1",
        "doctrine/orm": "^3.0",
        "symfony/config": "^7.0|^8.0",
        "symfony/mailer": "^7.0|^8.0",
        "symfony/twig-bridge": "^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "phpspec/prophecy-phpunit": "^2.4",
        "arty/php-coding-standard": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Arty\\ProbeBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arty\\ProbeBundle\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Arty"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
